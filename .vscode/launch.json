{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Flask Debug",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "args": [
                "run",
                "--debug"
            ],
            "env": {
                "FLASK_APP": "app.py"
            },
            "jinja": true
        }
    ]
}